{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": [
    "name",
    "protocol_version",
    "integration_version",
    "data"
  ],
  "properties": {
    "name": {
      "minLength": 1,
      "pattern": "^com.newrelic.elasticsearch$",
      "type": "string"
    },
    "protocol_version": {
      "minLength": 1,
      "pattern": "^3$",
      "type": "string"
    },
    "integration_version": {
      "minLength": 1,
      "pattern": "^[0-9]+.[0-9]+.[0-9]+$",
      "type": "string"
    },
    "data": {
      "type": "array",
      "minItems": 1,
      "items": [
        {
          "type": "object",
          "required": [
            "entity",
            "metrics",
            "inventory",
            "events"
          ],
          "properties": {
            "entity": {
              "type": "object",
              "required": [
                "name",
                "type",
                "id_attributes"
              ],
              "properties": {
                "name": {
                  "minLength": 1,
                  "type": "string"
                },
                "type": {
                  "minLength": 1,
                  "pattern": "^es-node$",
                  "type": "string"
                },
                "id_attributes": {
                  "type": "array",
                  "items": [
                    {
                      "type": "object",
                      "required": [
                        "Key",
                        "Value"
                      ],
                      "properties": {
                        "Key": {
                          "type": "string"
                        },
                        "Value": {
                          "type": "string"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": [
                        "Key",
                        "Value"
                      ],
                      "properties": {
                        "Key": {
                          "type": "string"
                        },
                        "Value": {
                          "type": "string"
                        }
                      }
                    }
                  ]
                }
              }
            },
            "metrics": {},
            "inventory": {
              "type": "object",
              "minProperties": 1,
              "properties": {}
            },
            "events": {
              "type": "array"
            }
          }
        }
      ]
    }
  }
}